<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <ListPreference
        android:defaultValue="@string/settings_order_by_default_value"
        android:entries="@array/settings_order_by_labels"
        android:entryValues="@array/settings_order_by_values"
        android:key="@string/settings_order_by_key"
        android:title="@string/settings_order_by_label" />

    <EditTextPreference
        android:defaultValue="@string/settings_news_query_default_value"
        android:hint="@string/setting_search_menu_hint"
        android:inputType="text"
        android:key="@string/settings_news_query_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_news_query_label" />

    <EditTextPreference
        android:defaultValue="@string/settings_news_page_size_default_value"
        android:inputType="number"
        android:key="@string/settings_news_page_size_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_news_page_size_label" />

</PreferenceScreen>